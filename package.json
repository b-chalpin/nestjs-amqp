{
  "name": "nestjs-amqp",
  "description": "AMQP connection service for nestjs",
  "keywords": [
    "nestjs",
    "amqp"
  ],
  "main": "dist/index.js",
  "version": "0.2.2",
  "license": "MIT",
  "devDependencies": {
    "@nestjs/common": "^10.4.20",
    "@nestjs/core": "^10.4.20",
    "@nestjs/platform-express": "^10.4.20",
    "@nestjs/testing": "^10.4.20",
    "@types/amqplib": "^0.5.13",
    "@types/es6-promise": "^3.3.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.6.2",
    "coveralls": "^3.0.2",
    "dotenv": "^10.0.0",
    "jest": "^29.7.0",
    "prettier": "^2.4.1",
    "ts-jest": "^29.4.4",
    "typescript": "5.8"
  },
  "peerDependencies": {
    "@nestjs/common": "^10",
    "@types/amqplib": "^0.5.13"
  },
  "dependencies": {
    "amqplib": "^0.7.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "7.1"
  },
  "scripts": {
    "build": "rm -rf ./dist && tsc",
    "coverage": "npm run test -- --coverage",
    "test": "jest --runInBand",
    "format": "prettier **/**/*.ts --ignore-path ./.prettierignore --write",
    "prepublish": "npm run format && npm run build",
    "check": "npm run format && npm run build && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nestjs-community/nestjs-amqp.git"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "setupFiles": [
      "<rootDir>/__tests__/setup.js"
    ]
  }
}
