{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "removeComments": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2024",
    "sourceMap": false,
    "allowJs": false,
    "rootDir": "./src",
    "baseUrl": "./",
    "outDir": "./dist"
  },
  "include": ["*.ts", "**/*.ts"],
  "exclude": ["node_modules", "./**/*.spec.ts", "examples"]
}
